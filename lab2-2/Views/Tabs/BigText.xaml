<UserControl x:Class="lab2_2.Views.Tabs.BigText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:lab2_2.Views.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Load and Count Words" Width="200" Margin="10" Click="LoadButton_Click"/>
            <ListBox x:Name="ResultsListBox" Width="500" Height="250" Margin="10"/>
            <TextBlock x:Name="ResultsCountTextBlock" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
